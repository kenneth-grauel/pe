<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="EclipsePE Category"
            id="EclipsePE">
      </category>
      <view
            name="EclipsePE"
            icon="icons/sample.gif"
            category="EclipsePE"
            class="eclipsepe.EclipsePEView"
            id="eclipsepe.EclipsePEView">
